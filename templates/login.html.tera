{% extends "base" %}

{% block content %}

{% if message %}
   {%if kind == "error" %} 
      <div class="text-rose-500">Error: {{ message }}</div>
   {% endif %}
{% endif %}

<form method="POST">
   Name: <input type="text" class="input dark:text-black p-1" name=name>
   {{ macros::submit_button(text="Log me in") }}
</form>
{% endblock content %}
